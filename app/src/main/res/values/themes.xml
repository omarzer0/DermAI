<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dermai" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="android:navigationBarColor">@color/mainColor</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="LoginActivityTheme" parent="Theme.Dermai">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="headerTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textGreenLarge</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="theme">@style/singleLine</item>
    </style>

    <style name="headerTextStyleSmall" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textGreenLarge</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="theme">@style/singleLine</item>
    </style>

    <style name="bodyTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="theme">@style/singleLine</item>
    </style>

    <style name="singleLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Cornered">
        <item name="cornerSize">20%</item>
    </style>

    <style name="roundShapeableImage">
        <item name="shapeAppearanceOverlay">@style/Circular</item>
    </style>

    <style name="corneredShapeableImage">
        <item name="shapeAppearanceOverlay">@style/Cornered</item>
    </style>

</resources>